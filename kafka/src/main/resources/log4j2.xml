<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
    <Properties>
        <Property name="service_name">${env:LOG_FILE_NAME_VALUE:-fts-test-api}</Property>
        <Property name="LOG_FILE">${BUILD_FOLDER:-build}/${service_name}</Property>
    </Properties>
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d [%t] [%X{traceId}/%X{spanId}] %-5level %logger{36} - %msg%n%throwable"/>
        </Console>
        <RollingFile name="RollingFile" filename="${LOG_FILE}.json.log" filePattern="${LOG_FILE}.json.%d{yyyy-MM-dd}.gz">
            <PatternLayout>
                <Pattern>
                    {"marker":"%marker","date":"%date","severity": "%5level","service": "${service_name:-}","trace": "%X{traceId}","span": "%X{spanId}","parent": "%X{parentId}", "pid": "%X{pid}", "thread": "%thread", "class": "%logger{40}", "rest": "%enc{%m}{JSON}", "throwable" : "%enc{%throwable}{JSON}"}%n
                </Pattern>
            </PatternLayout>
            <!--            <MarkerFilter marker="EMERGENCY" onMatch="ACCEPT"-->
            <!--                          onMismatch="DENY" />-->
            <Policies>
                <CronTriggeringPolicy schedule="0 0 * * * ?"/>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
        <RollingFile name="MetricsRollingFile" filename="${LOG_FILE}.metrics.log" filePattern="${LOG_FILE}.metrics.%d{yyyy-MM-dd}.gz">
            <PatternLayout>
                <Pattern>
                    %message%n
                </Pattern>
            </PatternLayout>
            <Policies>
                <CronTriggeringPolicy schedule="0 0 * * * ?"/>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
        <Console name="Console-Appender" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d [%t] %-5level %logger{36} - %msg%n%throwable"/>
        </Console>
        <RollingFile name="TracingRollingFile" filename="${LOG_FILE}.tracing.log" filePattern="${LOG_FILE}.tracing.%d{yyyy-MM-dd}.gz">
            <PatternLayout>
                <Pattern>
                    %m%n
                </Pattern>
            </PatternLayout>
            <Policies>
                <CronTriggeringPolicy schedule="0 0 * * * ?"/>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="${env:LOG_LEVEL:-INFO}">
            <AppenderRef ref="RollingFile" level="${env:LOG_LEVEL:-INFO}"/>
            <AppenderRef ref="ConsoleAppender" level="${env:LOG_LEVEL:-INFO}"/>
        </Root>
        <Logger name="com.icb.metrics" level="TRACE">
            <AppenderRef ref="MetricsRollingFile" level="TRACE"/>
        </Logger>
        <Logger name="com.fts.common.tracing.report.ReportSpanHandler" additivity="false" level="TRACE">
            <AppenderRef ref="TracingRollingFile" level="TRACE"/>
        </Logger>
    </Loggers>
</Configuration>
